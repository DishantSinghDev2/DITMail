# Server Configuration
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:3001

# Mail Server Domain Configuration
MAIL_SERVER_DOMAIN=mail.freecustom.email
SMTP_DOMAIN=smtp.freecustom.email
SERVER_IP=YOUR_ACTUAL_SERVER_IP

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# SMTP Configuration
SMTP_HOST=smtp.freecustom.email
SMTP_PORT=587
SMTP_SECURE=false
SMTP_PASSWORD=

# SSL/TLS Configuration
TLS_KEY_PATH=/etc/ssl/private/freecustom.email.key
TLS_CERT_PATH=/etc/ssl/certs/freecustom.email.crt

# Email Configuration
DEFAULT_DOMAIN=freecustom.email
ADMIN_EMAIL=admin@freecustom.email

# File Upload Configuration
MAX_FILE_SIZE=50MB
UPLOAD_PATH=/var/uploads

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=86400
MAX_LOGIN_ATTEMPTS=5

# Feature Flags
ENABLE_REGISTRATION=true
ENABLE_2FA=true
ENABLE_CALENDAR=true
ENABLE_CONTACTS=true
ENABLE_FILE_SHARING=true

# External Services
WEBHOOK_SECRET=your-webhook-secret
ANALYTICS_KEY=your-analytics-key

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
